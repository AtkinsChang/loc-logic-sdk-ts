{
  "name": "@saffron/root",
  "version": "1.0.0",
  "repository": "https://github.com/fstnetwork/saffron",
  "author": "FST Network <dev@fstk.io>",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn build:runtime && yarn build:logic && yarn build:tests",
    "build:runtime": "yarn workspace @saffron/runtime run build",
    "build:logic": "yarn workspace @saffron/logic run build",
    "build:tests": "yarn workspace @saffron/tests run build",
    "clean": "yarn workspaces foreach -i -p -v run clean"
  },
  "devDependencies": {
    "typescript": "^4.3.5"
  },
  "packageManager": "yarn@3.0.1"
}
