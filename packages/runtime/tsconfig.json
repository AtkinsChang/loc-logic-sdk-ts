{
  "extends": "../../tsconfig.base",
  "compilerOptions": {
    "composite": true,
    "rootDir": "src",
    "outDir": "dts",
    "emitDeclarationOnly": true
  },
  "include": ["src/**/*"],
  "exclude": ["target"],
  // override config for ts-node
  "ts-node": {
    "compilerOptions": {
      "rootDir": ".",
      "module": "commonjs",
      "emitDeclarationOnly": false
    }
  }
}
